<%- include("partials/header") %>
<a href="javascript:history.back()" class="btn btn-secondary ml-auto"
  >Go back</a
>
<div class="container-fluid" style="margin-top: 6rem; margin-bottom: 3rem;">
  <div class="row justify-content-center">
    <div class="display-1 text-center">
      <span id="head-text">Movie Lookup</span>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="lead">
      <p class="display-4">Seach results for <%= name %></p>
    </div>
  </div>
  <div class="row justify-content-center text-center">
    <% data.Search.forEach(function(movie){ %>
    <a
      href="/show/<%= movie.imdbID %>"
      class="cardHover col-sm-6 col-md-4 col-lg-3  mt-5"
    >
      <div class="card">
        <div class="card text-center">
          <img
            class="card-img-top blog"
            src="<%= movie.Poster %>"
            alt="Sorry Image not found"
          />
          <div class="card-body pb-0">
            <h5 class="card-title"><%= movie.Title %></h5>
            <hr />
            <p class="text-muted"><%= movie.Year %></p>
          </div>
        </div>
      </div>
    </a>
    <% }) %>
  </div>
</div>

<%- include("partials/footer") %>
